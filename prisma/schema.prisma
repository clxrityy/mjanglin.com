generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id           String     @id @default(uuid())
  userId       String     @unique
  accessToken  String     @unique
  refreshToken String     @unique
  guilds       Guild[]
  cooldowns    Cooldown[]
  members       Member[]
}

model Birthday {
  id      String @id @default(uuid())
  userId  String @unique
  guildId String
  month   Int
  day     Int
}

model Guild {
  id          String     @id @default(uuid())
  guildId     String     @unique
  userId      String
  changeable  Boolean    @default(false)
  adminRoleId String?
  cooldowns   Cooldown[]
  user        User       @relation(fields: [userId], references: [id])
  members     Member[]
}

model Cooldown {
  id        String   @id @default(uuid())
  userId    String
  guildId   String
  command   String
  createdAt DateTime @default(now())
  expiresAt DateTime @default(dbgenerated("now() + interval '1 minute'"))
  guild     Guild    @relation(fields: [guildId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model Member {
  id      String @id @default(uuid())
  userId  String
  user    User?   @relation(fields: [userId], references: [id])
  guilds   Guild[]
}